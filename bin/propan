#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

var_dump($_ENV);

$app = new Javanile\Propan\Application(getcwd());

$app->add(new Javanile\Propan\Commands\BuildCommand);
$app->add(new Javanile\Propan\Commands\RunCommand);
$app->add(new Javanile\Propan\Commands\StopCommand);

try {
    $app->run();
} catch (Exception $e) {
    echo 'ERROR: '.$e->getMessage()."\n";
    exit(1);
}
