#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

$context = new \Javanile\Propan\Context(getcwd());

$app = new Javanile\Propan\Application($context);

//$app->add(new Javanile\Propan\Commands\AddCommand);
//$app->add(new Javanile\Propan\Commands\NewCommand);
//$app->add(new Javanile\Propan\Commands\FetchCommand);
$app->add(new Javanile\Propan\Commands\BuildCommand);
$app->add(new Javanile\Propan\Commands\RunCommand);
$app->add(new Javanile\Propan\Commands\StopCommand);

$app->run();
